{
  "version": "0.2.1",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fdiagnostics-color=always",
        "--std",
        "c++17",
        "-c",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /usr/bin/clang"
    },
    {
      "taskLabel": "task-ece-capstone-driver",
      "appliesTo": "/",
      "type": "launch"
    }
  ]
}